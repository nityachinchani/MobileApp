<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#046687" />
            <gradient android:angle="-90" android:startColor="#944D10" android:endColor="#ED9E5A"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="#EA8934" />
            <solid android:color="#EA8934"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#944D10" />
            <gradient android:angle="-90" android:startColor="#EA8934" android:endColor="#F8D4B5" />
        </shape>
    </item>
</selector>