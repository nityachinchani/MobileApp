<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.UpdateBillingActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color_main"
            android:clickable="false"
            android:focusable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="212dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="30dp"
                app:srcCompat="@drawable/profile_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="Product Name"
                android:textColor="@color/general_text_color"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="30dp"
                android:backgroundTint="@color/general_text_color"
                android:textColor="@color/general_text_color"
                android:textColorHint="@color/general_text_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="Price "
                android:textColor="@color/general_text_color"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="30dp"
                android:textColor="@color/general_text_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="Description"
                android:textColor="@color/general_text_color"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="30dp"
                android:textColor="@color/general_text_color" />

            <TextView
                android:id="@+id/tv_Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="Billing Status"
                android:textColor="@color/general_text_color"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/billingStatusSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:spinnerMode="dialog" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_beautification"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Update"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/button_text"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="25dp"/>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>