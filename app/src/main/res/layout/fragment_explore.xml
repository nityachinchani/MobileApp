<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_main"
    android:orientation="vertical"
    android:paddingBottom="56dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#18354E"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:backgroundTint="#ED9E5A"
            android:gravity="center_horizontal|center_vertical"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/locationSpinner"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:backgroundTint="#ED9E5A"
            android:gravity="center_horizontal|center_vertical"
            android:spinnerMode="dialog" />

        <Button
            android:id="@+id/goBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_beautification"
            android:clickable="false"
            android:text="Search"
            android:textColor="@color/button_text"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"/>


    </LinearLayout>

    <GridView
        android:id="@+id/exploreGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:padding="10dp"
        android:verticalSpacing="10dp">

    </GridView>

    <!--   <ListView
           android:id="@+id/explore_List_View"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="#E5F6F8" />
   -->

</LinearLayout>